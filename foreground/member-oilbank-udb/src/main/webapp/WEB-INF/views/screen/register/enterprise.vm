        $("#certdiv .s-form-radio").on("check", function () {
            var radio = $(this).Radio();
            var val = radio.checkbox.val();
            validater.destroy();
            if (val == 1) {
                $("#cert1").show()
                $("#cert0").hide()
                $("#saveForm").validate(in_one);
            } else {
                $("#cert0").show()
                $("#cert1").hide()
                $("#saveForm").validate(in_not_one);
            }
        });
        #if($enterprise.useSocialCreditCert==false)
            $("#cert0").show()
            $("#cert1").hide()
            $("#saveForm").validate(in_not_one);
            $("#socialCreditCode").rules("remove");
        #end

        //当境内境外按钮点击的时候
        $("#epType .s-form-radio").on("check", function () {
            var radio = $(this).Radio();
            var val = radio.checkbox.val();
            validater.destroy();
            if (val == 1) {
                $(".forgin").show()
                $(".in").hide()
                $("#saveForm").validate(out);
                $("#adminCertLi").hide();
                $("#jtn").hide()
                #if($isRegisterToYihua)
                    $("#other_info").hide();
                #end
            } else {
                $(".forgin").hide()
                $(".in").show()
                $("#saveForm").validate(in_one);
                $("#certdiv input[value=1]").next().Radio("check");
                $("#adminCertLi").show();
                $("#jtn").show()
                #if($isRegisterToYihua)
                    $("#other_info").show();
                #end
            }
        });

        #if($enterprise.epType&&$enterprise.epType==1)
            $("#epType .s-form-radio").eq(1).click();
        #end
    });

