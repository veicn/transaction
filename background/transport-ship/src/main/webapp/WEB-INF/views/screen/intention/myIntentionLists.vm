
	<!-- 货主的询盘信息 -->
    <!-- 内容主体区域 -->
    <div class="s-mod">
		<div class="s-order-box">
				<div class="clearfix s-order-tit"><h1><span>$!palletCode - </span>询盘信息列表</h1></div>
		</div>
		<div class="s-mod-block">
		
			#foreach($data in $datas)
			<div class="s-mod-btit">
				<a href="javascript:;" class="lookBtn" attr-data="$!data.uuid" statusData="$!data.status" title="查看详情">询盘单号：$!{data.intentionCode}</a>
				<!-- 状态 -->
				#if($!{data.status} == '1')<span>已询盘</span>#end
				#if($!{data.status} == '2')<span>已还盘</span>#end
				#if($!{data.status} == '3')<span>确认租船</span>#end
				#if($!{data.status} == '4')<span>已关闭</span>#end
			</div>
			<div class="s-mod-bcont">
				<form class="s-form s-form-cont s-form-cont2" action="">
					<ul>
						<li class="s-form-item">
							<div class="s-inline">
							  <label class="s-form-label">船名：</label>
							  <div class="s-input-inline">
								 <p title="$!{data.shipName}">$!{data.shipName}</p>
							  </div>
							</div>
							<div class="s-inline">
							  <label class="s-form-label">意向装期LAYCAN：</label>
							  <div class="s-input-inline">
								  <p title="$!{data.inPactBeg}-$!{data.inPactEnd}">$!{data.inPactBeg}-$!{data.inPactEnd}</p>
							  </div>
							</div>
							<div class="s-inline">
							  <label class="s-form-label">意向装货量（吨）：</label>
							  <div class="s-input-inline">
								  <p title="$!{data.inMinQuantity}">$!{data.inMinQuantity}</p>
							  </div>
							</div>
							<div class="s-inline">
							  <label class="s-form-label">意向卸货地点要求：</label>
							  <div class="s-input-inline">
								<p title="$!{data.inUnloadRegion}">$!{data.inUnloadRegion}</p>
							  </div>
							</div>
							<div class="s-inline">
							  <label class="s-form-label">允许装卸时间：</label>
							  <div class="s-input-inline">
								 <p title="$!{data.inDockTime}">$!{data.inDockTime} 小时</p>
							  </div>
							</div>
							<div class="s-inline">
							  <label class="s-form-label">意向装货地点要求：</label>
							  <div class="s-input-inline">
								  <p title="$!{data.inLoadRegion}">$!{data.inLoadRegion}</p>
							  </div>
							</div>
						</li>
					</ul>
				</form>
				<div class="s-but-all clearfix">
					<div class="s-all-jt"><p><i class="s-icon s-all-zk"></i></p>
						<div class="s-but-ship clearfix">
					         #if($!{data.status} == '1')
								  <a href="javascript:;" class="s-btn s-btn-reset lookBtn" attr-data="$!data.uuid" statusData="$!data.status">询盘详情</a>
								  <!-- <a href="javascript:;" class="s-btn s-btn-termination terminationBtn" attr-data="$!data.uuid">终&nbsp;&nbsp;止</a> -->
							 #end
							 #if($!{data.status} == '2')
								  <a href="javascript:;" class="s-btn s-btn-reset lookBtn" attr-data="$!data.uuid" statusData="$!data.status">还盘详情</a>
								  <a href="javascript:;" class="s-btn s-btn-termination terminationBtn" attr-data="$!data.uuid">终&nbsp;&nbsp;止</a>
							 #end
							 #if($!{data.status} == '3')
								  <a href="javascript:;" class="s-btn s-btn-reset lookBtn" attr-data="$!data.uuid" statusData="$!data.status">租船详情</a>
								  <!-- <a href="javascript:;" class="s-btn s-btn-termination lookAgreementBtn" attr-data="$!data.uuid">查看租船协议</a> -->
							 #end
							 #if($!{data.status} == '4')
								  <a href="javascript:;" class="s-btn s-btn-reset lookBtn" attr-data="$!data.uuid" statusData="$!data.status">查看详情</a>
							 #end
						</div>
					</div>
				</div>
			</div>
			#end
		</div>
		$contain.get('/contain/tablePageSlider.htm').put('slider_query',$query).put('slider_target',"$shipServer.get('/intention/myIntentionLists.htm')")
		
		<div class="c-subdiv">
			<button class="c-btnsub back returnBtn">返回</button>
		</div>
		
	</div>
	<script src="../transport/js/intention/myIntentionLists.js"></script>
  
