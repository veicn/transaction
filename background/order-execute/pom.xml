	    </dependency>
    </dependencies>
    <properties>
        <test.skip>true</test.skip>
        <mbg.package>com.sinochem.crude.trade.orderexecute</mbg.package>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>