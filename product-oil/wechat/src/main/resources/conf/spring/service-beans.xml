			</bean>
		</property>
	</bean>

	<bean id="webBindingInitializer" class="com.sinochem.it.b2b.common.convertor.ConverterInitBinder"> </bean>

	<context:component-scan
			base-package="com.sinochem.crude.trade.wechat.util,com.sinochem.crude.trade.*.*.impl,com.sinochem.crude.trade.common,com.sinochem.crude.trade.member.user,com.sinochem.it.b2b" />
</beans>